%h1= 'My Cart'
%h2= "Total: $#{@cart.total_amount}"

%ul
  -@accessories.each do |accessory|
    %img{width: "60", height: "60", :src => asset_path(accessory.image_url)}/
    %br
    %span= accessory.title
    %br
    %span= accessory.price
    %br
    %span= accessory.description
    %br
    Quantity:
    %span= @cart.contents[accessory.id.to_s]
    %br
    Subtotal:
    %span= @cart.subtotal(accessory)
    %br
