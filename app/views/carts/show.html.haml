%h1= 'My Cart'
%h2= "Total: $#{@cart.total_amount}"


%table{:border => 5, :width => "100%"}
  %tbody
    %tr
      %th Accesory:
      %th Accesory Name:
      %th Price:
      %th Desription:
      %th Quantity:
      %th Subtotal:
      %th Decrease:
      %th Remove:
      %th Increase:
    -@accessories.each do |accessory|
      %tr{id:"cart-accessory-#{accessory.id}"}
        %td
          %img{width: "80", height: "60",:src => asset_path(accessory.image_url)}/
        %td= accessory.title
        %td= accessory.price
        %td= accessory.description
        %td= @cart.contents[accessory.id.to_s]
        %td= "$#{@cart.subtotal(accessory)}"          
        %td= button_to 'Decrease', '/cart/decrease_item_count', params:{accesory_id: accessory.id, :cart => @cart}
        %td= button_to 'Remove', '/cart/remove_item', params:{accesory_id: accessory.id, :cart => @cart}
        %td= button_to 'Increase', '/cart/increase_item_count', params:{accesory_id: accessory.id, :cart => @cart}

