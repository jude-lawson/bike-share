%h1 Accessories
- if current_admin?
  = link_to('Create A New Accessory', new_admin_accessory_path)

%ul
  -@accessories.each do |accessory|
    %li{id: "accessory-#{accessory.id}"}
      %img{width: '80px', height: '80px', src: accessory.image_url}
      =link_to accessory.title, accessory_path(accessory)
      %span= accessory.price
      %span= accessory.description
      -if accessory.status == 'active'
        =button_to 'Add to Cart', carts_path(accessory_id: accessory.id), method: :post
      -else
        Accessory Retired
