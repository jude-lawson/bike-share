    <tr>
      <th>Id</th>
      <th>User</th> 
      <th>Quantity</th>
      <th>Status</th>
    </tr>
    <% @orders.each do |order| %>
      <tr id="order-<%=order.id%>">
        <td>
          <%= link_to  "#{order.id}", order_path(order) %>
        </td>
        <td>
          <%= order.user.username %>
        </td>
        <td>
          <%= order.quantity %>
        </td>
        <td>
