<content>
  <%= current_user.username%>
  <%= current_user.first_name%>
  <%= current_user.last_name%>
  <%= current_user.address%>

<button class="tablink" onclick="openStatus('All')" id="defaultOpen">All</button>
<button class="tablink" onclick="openStatus('Cancelled')">Cancelled</button>
<button class="tablink" onclick="openStatus('Ordered')">Ordered</button>
<button class="tablink" onclick="openStatus('Paid')">Paid</button>
<button class="tablink" onclick="openStatus('Completed')">Completed</button>

