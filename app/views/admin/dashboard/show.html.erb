<content>
  <%= current_user.username%>
  <%= current_user.first_name%>
  <%= current_user.last_name%>
  <%= current_user.address%>

<button class="tablink" onclick="openStatus('All')" id="defaultOpen">All: <%=@orders.count%></button>
<button class="tablink" onclick="openStatus('Cancelled')">Cancelled: <%=@cancelled.count%></button>
<button class="tablink" onclick="openStatus('Ordered')">Ordered: <%=@ordered.count%></button>
<button class="tablink" onclick="openStatus('Paid')">Paid: <%=@paid.count%></button>
<button class="tablink" onclick="openStatus('Completed')">Completed: <%=@completed.count%></button>

  <table id="All" class="tabcontent">
    <tr>
      <th>Id</th>
      <th>User</th> 
      <th>Quantity</th>
      <th>Status</th>
    </tr>
    <% @orders.each do |order| %>
      <tr id="order-<%=order.id%>">
        <td>
          <%= link_to  "#{order.id}", order_path(order) %>
        </td>
        <td>
          <%= order.user.username %>
        </td>
        <td>
          <%= order.quantity %>
        </td>
        <td>
          <%= order.status %>
        </td>
      </tr>
    <% end %>
