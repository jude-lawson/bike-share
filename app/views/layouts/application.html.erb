<!DOCTYPE html>
<html>
  <head>
    <title>BikeShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="nav_bar">
      <% if current_user %>
        <%= link_to 'Log Out', logout_path, method: :post%>
      <% else %>
        <%= link_to 'Log In', login_path %>
      <% end %>
      <div class="flash-message">
        <%= flash.notice %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
