<!DOCTYPE html>
<html>
  <head>
    <title>BikeShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans|Roboto" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% unless @hide_nav%>
        <header id="top_bar">
        <nav class="navigation">
          <%= render partial: "partials/nav" %>
        </nav>
        <div class="auth">
          <%= render partial: 'partials/login' %>
        </div>
        <div class="flash">
          <%= render partial: "partials/flash" %>
        </div>
      </header>
      <%= render 'partials/cart' %>
    <% end %>
    <%= yield %>
  </body>
</html>
